<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MAUIPostmanClone.MainPage">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <HorizontalStackLayout Spacing="10">
                <Picker x:Name="HttpMethodPicker" WidthRequest="100">
                    <Picker.ItemsSource>
                        <x:Array Type="{x:Type x:String}">
                            <x:String>GET</x:String>
                            <x:String>POST</x:String>
                            <x:String>PUT</x:String>
                            <x:String>DELETE</x:String>
                        </x:Array>
                    </Picker.ItemsSource>
                    <Picker.SelectedIndex>0</Picker.SelectedIndex>
                </Picker>
                <Entry x:Name="UrlEntry"
                       Placeholder="Enter request URL"
                       HorizontalOptions="Fill" />
            </HorizontalStackLayout>

            <Editor x:Name="BodyEditor"
                    Placeholder="Request body (JSON)"
                    AutoSize="TextChanges"
                    HeightRequest="120"
                    IsVisible="False" />

            <Button Text="Send"
                    Clicked="OnSendClicked"
                    BackgroundColor="Navy"
                    TextColor="White" />

            <Label Text="Response:"
                   FontAttributes="Bold" />
            <Editor x:Name="ResponseEditor"
                    IsReadOnly="True"
                    HeightRequest="200"
                    AutoSize="TextChanges" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>